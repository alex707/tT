<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class => 'control-label' %>
    <%= f.email_field :email, autofocus: true, :class => 'control-label' %>
  </div>

  <div class="field">
    <%= f.label :user_nickname, :class => 'control-label' %>
    <%= f.text_field :user_nickname, autofocus: true, :class => 'control-label' %>
  </div>

  <div class="field">
    <%= f.label :password, :class => 'control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :class => 'control-label' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'control-label' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
