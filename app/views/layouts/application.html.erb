<!DOCTYPE html>
<html>
<head>
  <title>TT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<nav class="navbar navbar-default">
  <div class="container">
    <%= link_to "All Walls", '/walls', class: 'navbar-brand' %>
    <%= link_to "My Walls", '/my_walls', class: 'navbar-brand' if user_signed_in? %>

    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'navbar-brand navbar-right' %>
      <%= link_to "Edit Profile(#{current_user.user_nickname})", edit_user_registration_path, class: 'navbar-brand navbar-right' %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: 'navbar-brand navbar-right' %>
      <%= link_to "Sign in", new_user_session_path, class: 'navbar-brand navbar-right' %>
    <% end %>

  </div>
</nav>

  <div id="conteiner" class="container">
    <% flash.each do |name, p| %>
      <%= content_tag :div, p, id: "flash_#{name}" %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
